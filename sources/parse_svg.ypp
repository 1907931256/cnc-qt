%name-prefix "svg_"


%token NL_CHAR
%token CHAR
%token COMMENTAR
%token NEW_LINE
%token INT
%token FLOAT

%token InvalidCharacter

%token Eol

%union {
    int       i_val;
    float     f_val;
    char      c_val;
    char*     s_val;
}


%type <i_val> INT
%type <f_val> FLOAT
%type <c_val> NL_CHAR CHAR
%type <s_val> COMMENTAR


%start parse_svg

%%

parse_svg: 
        | glines
        ;


glines: gline glines
        | gline
        ;


gline:  NL_CHAR INT
        {
            // the new line, create new object
            // for cases, when line begins with g, m command or n: label
            if (GData::dataVector.count() == 0){
                svg_data =  new ParserData();
            }
            else {
                svg_data =  new ParserData(svg_data);
            }
            svg_data->numberLine = svg_lineno;

            switch ($1 | 0x20){
                case 'n' :
                    svg_data->labelNum = $2;
                    break;

                case 'g' :
                    svg_data->gCmd = $2;
                    switch ($2){
                        case 0:
//                             svg_data->baseData.movingCode = RAPID_LINE_CODE;
                            break;
                            
                        case 1:
                        case 2:
                        case 3:
//                             svg_data->baseData.movingCode = FEED_LINE_CODE;
                            break;
                            
                        case 17:
//                             svg_data->plane = XY;
                            break;
                            
                        case 18:
//                             svg_data->plane = YZ;
                            break;
                            
                        case 19:
//                             svg_data->plane = ZX;
                            break;
                    }
                    break;

                case 'm' :
                    svg_data->gCmd = -1;
                    svg_data->mCmd = $2;
                    break;
 
                default:
                    // not decoded, it's possible other code? 
//                     if (set_data_float(($1 | 0x20), (float) $2) == false) {
//                         svg_data->decoded = false;
//                         printf("not decoded char %c, line %d\n", $1, svg_lineno);
//                     }
                    break;
            }
        }
        | NL_CHAR FLOAT
        {
            // when line begins with coordinates 
            svg_data =  new ParserData(svg_data);
            svg_data->numberLine = svg_lineno;
            
//             set_data_float(($1 | 0x20), $2);
        }
        | NL_CHAR
        {
            // store coordinates
        }
        | CHAR INT 
        {
            switch ($1 | 0x20){
                case 'g' : {
                    // new command in line, create new object
                    GData::dataVector << *svg_data;
                    svg_data =  new ParserData(svg_data);
                    svg_data->numberLine = svg_lineno;
                    svg_data->gCmd = $2; 
                    
                    if ($2 == 1 || $2 == 2 || $2 == 3) {
//                         svg_data->baseData.movingCode = FEED_LINE_CODE;
                    }
                    if ($2 == 0) {
//                         svg_data->baseData.movingCode = RAPID_LINE_CODE;
                    }
                    break;
                }

                case 'm' : {
                    svg_data->mCmd = $2;
                    break;
                }
 
                default:
//                     if (set_data_float(($1 | 0x20), (float) $2) == false) {
//                         svg_data->decoded = false;
//                     }
                    break;
            }
        }
        | CHAR FLOAT 
        {
//             set_data_float(($1 | 0x20), $2);
        }
        | CHAR
        {
            // store coordinates
        }
        | COMMENTAR 
        {
           svg_data->lineComment = QString($1).simplified();
           free($1);
        }
        | NEW_LINE
        {
            GData::dataVector << *svg_data;
        }
        ;

